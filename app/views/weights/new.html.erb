<div style="float:left;width:400px;margin-left:5px;">
<% form_for @weight, :builder => WorkoutFormBuilder do |f| %>
  <%= hidden_field :weight, :user_id, :value => current_user.id %>
  <p>
    <%= f.label :weight %>
    <%= f.text_field :weight, :size => 3, :maxlength => 6 %> kg
    <span>Ex.: 78.649</span>
  </p>
  <div id="errors"></div>
  <p>
  <input id="weight_submit" type="button" value="Registrar" />
  </p>
<% end %>
</div>
