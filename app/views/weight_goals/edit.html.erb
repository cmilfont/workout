<h1>Editing weight_goal</h1>

<% form_for(@weight_goal) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :goal %><br />
    <%= f.datetime_select :goal %>
  </p>
  <p>
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </p>
  <p>
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @weight_goal %> |
<%= link_to 'Back', weight_goals_path %>