</head>
<body>
<div id="home">

   <div id="hd">

    <% if current_user %>
      <div id="hd_menu">
        <%= link_to "InÃ­cio", root_path %>
        <%= link_to "Perfil", account_path %>
      </div>

      <div id="message">
        <% if flash[:login] %>
          <%= flash[:login] + current_user.name + "!" %>
        <% end %>
        <% if flash[:notice] %>
          <%= flash[:notice] %>
        <% end %>
        <% if flash[:error] %>
          <%= flash[:error] %>
        <% end %>
      </div>

      <div id="hd_search">
        <b><%= current_user.email %></b>
        <%= link_to "Sair", user_session_path, :method => :delete, :confirm => "Are you sure you want to logout?" %>
        <input id="search" type="text" >
      </div>
    <% else %>
      <%= link_to "Register", new_account_path %>
      <%= link_to "Log In", new_user_session_path %>
      <%= link_to "Forgot password", new_password_reset_path %>
    <% end %>

   </div>
   <div id="bd" role="main">

